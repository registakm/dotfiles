[core]
    excludesfile = ~/.gitignore_global
[include]
    path = ~/.gitconfig.local
[color]
    ui = auto
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
[pager]
    log  = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
[ghq]
    root = ~/src